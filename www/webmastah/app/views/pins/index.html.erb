
<div id="pins" class="transitions-enabled">

<% @pins.each do |pin| %>
<div class="box">
<div class="panel panel-default">

<br><%= link_to image_tag(pin.image.url(:medium)),
pin %><br/>

<div class="panel-body">

<%= pin.description %><br/>

<br/><strong><%= pin.user.name if pin.user %></strong>
<br/>

</div>
<% if pin.user == current_user %>

<div class="panel-footer">

<br/>
<%= link_to 'Edytuj', edit_pin_path(pin) %>

<%= link_to 'Usuń', pin, method: :delete,
data: { confirm: 'Jesteś
↳pewien?' } %>

</div>
<% end %>
</div>
</div>
<% end %>
</div>
<div class="center">
<%= will_paginate @pins, renderer:
BootstrapPagination::Rails %>
</div>